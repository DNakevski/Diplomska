@model MojKatalog.Models.Kompanii
@{
    ViewBag.Title = "Index";
}

<h3 class="page-title">Податоци за компанијата <small>преглед и измена на податоците</small></h3>
<div class="well bs-component">
    @using (Html.BeginForm("IzmeniKompanijaInfo", "Kompanija", FormMethod.Get, new { @class = "form-horizontal" }))
            {
        <fieldset>
            <legend></legend>
            <div class="form-group">
                @Html.LabelFor(m => m.ProfilnaSlika, new { @class = "control-label col-lg-4" })
                <div class="col-lg-8">
                    <div class="thumbnail" style="width:210px; margin-bottom: 0px;">
                        @if (Model.ProfilnaSlika != null)
                        {
                            <div class="image-uploaded Image2 fill-screen" style="background-image: url(@(Model.ProfilnaSlika));"></div>
                        }
                        else
                        {
                            <div class="image-uploaded Image2 fill-screen" style="background-image: url(../../Images/Profile/ProfileImage.jpg); width:200px; height:200px;"></div>
                        }
                    </div>

                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.NazivNaKompanija, new { @class = "control-label col-lg-4" })
                <div class="col-lg-8 control-text">
                    <text> @Model.NazivNaKompanija </text>
                </div>
            </div>
         
            <div class="form-group">
                @Html.LabelFor(m => m.KorisnickoIme, new { @class = "control-label col-lg-4" })
                <div class="col-lg-8 control-text">
                    <text>@Model.KorisnickoIme</text>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Lozinka, new { @class = "control-label col-lg-4" })
                <div class="col-lg-8 control-text">
                    <text>@Model.Lozinka</text>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.OpisNaKompanija, new { @class = "control-label col-lg-4" })
                <div class="col-lg-8 control-text">
                    <text>@Model.OpisNaKompanija</text>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Mail, new { @class = "control-label col-lg-4" })
                <div class="col-lg-8 control-text">
                    <text>@Model.Mail</text>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Telefon, new { @class = "control-label col-lg-4" })
                <div class="col-lg-8 control-text">
                    <text>@Model.Telefon</text>
                </div>
            </div>
            
            <div class="form-group">
                @Html.LabelFor(m => m.LogoNaKompanija, new { @class = "control-label col-lg-4" })
                <div class="col-lg-8">
                    <div class="thumbnail">
                        <div class="image-uploaded Image1 fill-screen" style="background-image: url(@(Model.LogoNaKompanija));"></div>
                       
                    </div>
                </div>
            </div>



            <div class="form-group">
                <div class="col-lg-8 col-lg-offset-4">
                    <button type="submit" class="btn btn-primary">Измени</button>
                </div>
            </div>
        </fieldset>

    }
</div>





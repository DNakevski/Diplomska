@model MojKatalog.Models.ViewModels.MailPageViewModel
    @{
        ViewBag.Title = "Index";
    }


    <h3 class="page-title">Пошта <small>управување со пораки</small></h3>
    <ul class="breadcrumb">
        <li class="active">Пошта</li>
    </ul>
    <input type="hidden" id="activeLink" value="mailLink" />
    <div class="container mail-container">
        <div class="row row-content">
            <div class="col-sm-3 col-md-2">
                <a href="@Url.Action("IspratiMail")" class="btn btn-danger btn-block" role="button"><span class="glyphicon glyphicon-pencil"></span>Креирај</a>
                <hr>
                <ul class="nav nav-pills nav-stacked" role="tablist">
                    <li class="active">
                        <a href="#isprateniTab" data-toggle="tab" role="tab"><span class="badge pull-right">@Model.IsprateniPorakiCount</span> Испратени </a>
                    </li>
                    <li><a href="#izbrishaniTab" data-toggle="tab" role="tab"><span class="badge pull-right">@Model.IzbrishaniPorakiCount</span> Избришани</a></li>
                    <li><a href="#socuvaniTab" data-toggle="tab" role="tab"><span class="badge pull-right">@Model.SocuvaniPorakiCount</span> Сочувани</a></li>
                </ul>
            </div>
            <div class="col-sm-9 col-md-10">
                <!-- Nav tabs -->
                
                <!-- Tab panes -->
                <div class="tab-content">
                    <div class="tab-pane fade in active" id="isprateniTab" role="tabpanel">
                        <ul class="mail-actions">
                            <li>
                                <input class="checkbox-input check-all" type="checkbox" id="selectAllIsprateni" target="isprateni-check"/>
                            </li>
                            <li><span class="glyphicon glyphicon-refresh"></span></li>
                            <li><span class="glyphicon glyphicon-trash"></span></li>
                            <li class="pull-right">
                                <span class="text-muted"><b>1</b>–<b>50</b> of <b>160</b></span>
                                <div class="btn-group btn-group-sm">
                                    <button type="button" class="btn btn-default">
                                        <span class="glyphicon glyphicon-chevron-left"></span>
                                    </button>
                                    <button type="button" class="btn btn-default">
                                        <span class="glyphicon glyphicon-chevron-right"></span>
                                    </button>
                                </div>
                            </li>
                        </ul>
                        <div class="list-group isprateni-container">

                            @foreach (var poraka in Model.IsprateniPoraki)
                            {
                                var subject = (poraka.Subject.Length > 50) ? poraka.Subject.Substring(0, 50) + "..." : poraka.Subject;
                                <a href="#" class="list-group-item">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" name="isprateni-check" value="@poraka.IdPoraki" style="margin-top:8px !important;"/>
                                        </label>
                                    </div>
                                    <span class="glyphicon glyphicon-star-empty"></span><span class="name" style="min-width: 120px; display: inline-block;">Mark Otto</span> <span class="">@subject</span>
                                    <span class="text-muted" style="font-size: 11px;">- Повеќе содржина</span> <span class="badge">@poraka.Date.Value.ToString("dd/MM/yyyy hh:mm:ss")</span> <span class="pull-right"></span>
                                </a>
                            }
                           
                        </div>
                    </div>
                    <div class="tab-pane fade in" id="izbrishaniTab" role="tabpanel">
                        <ul class="mail-actions">
                            <li>
                                <input class="checkbox-input check-all" type="checkbox" id="selectAllIzbrishani" target="izbrishani-check"/>
                            </li>
                            <li><span class="glyphicon glyphicon-refresh"></span></li>
                            <li><span class="glyphicon glyphicon-trash"></span></li>
                            <li class="pull-right">
                                <span class="text-muted"><b>1</b>–<b>50</b> of <b>160</b></span>
                                <div class="btn-group btn-group-sm">
                                    <button type="button" class="btn btn-default">
                                        <span class="glyphicon glyphicon-chevron-left"></span>
                                    </button>
                                    <button type="button" class="btn btn-default">
                                        <span class="glyphicon glyphicon-chevron-right"></span>
                                    </button>
                                </div>
                            </li>
                        </ul>
                        <div class="list-group izbrishani-container">
                            
                            @foreach (var poraka in Model.IzbrishaniPoraki)
                            {
                                var subject = (poraka.Subject.Length > 50) ? poraka.Subject.Substring(0, 50) + "..." : poraka.Subject;
                                <a href="#" class="list-group-item">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" name="izbrishani-check" value="@poraka.IdPoraki" style="margin-top:8px !important;" />
                                        </label>
                                    </div>
                                    <span class="glyphicon glyphicon-star-empty"></span><span class="name" style="min-width: 120px; display: inline-block;">Mark Otto</span> <span class="">@subject</span>
                                    <span class="text-muted" style="font-size: 11px;">- Повеќе содржина</span> <span class="badge">@poraka.Date.Value.ToString("dd/MM/yyyy hh:mm:ss")</span> <span class="pull-right"></span>
                                </a>
                            }

                        </div>
                    </div>
                    <div class="tab-pane fade in" id="socuvaniTab" role="tabpanel">
                        <ul class="mail-actions">
                            <li>
                                <input class="checkbox-input check-all" type="checkbox"  id="selectAllSocuvani" target="socuvani-check"/>
                            </li>
                            <li><span class="glyphicon glyphicon-refresh"></span></li>
                            <li><span class="glyphicon glyphicon-trash"></span></li>
                            <li class="pull-right">
                                <span class="text-muted"><b>1</b>–<b>50</b> of <b>160</b></span>
                                <div class="btn-group btn-group-sm">
                                    <button type="button" class="btn btn-default">
                                        <span class="glyphicon glyphicon-chevron-left"></span>
                                    </button>
                                    <button type="button" class="btn btn-default">
                                        <span class="glyphicon glyphicon-chevron-right"></span>
                                    </button>
                                </div>
                            </li>
                        </ul>
                        <div class="list-group socuvani-container">

                            @foreach (var poraka in Model.SocuvaniPoraki)
                            {
                                var subject = (poraka.Subject.Length > 50) ? poraka.Subject.Substring(0, 50) + "..." : poraka.Subject;
                                <a href="#" class="list-group-item">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" name="socuvani-check" value="@poraka.IdPoraki" style="margin-top:8px !important;" />
                                        </label>
                                    </div>
                                    <span class="glyphicon glyphicon-star-empty"></span><span class="name" style="min-width: 120px; display: inline-block;">Mark Otto</span> <span class="">@subject</span>
                                    <span class="text-muted" style="font-size: 11px;">- Повеќе содржина</span> <span class="badge">@poraka.Date.Value.ToString("dd/MM/yyyy hh:mm:ss")</span> <span class="pull-right"></span>
                                </a>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


@section Scripts
{
    <script type="text/javascript">

        $(document).ready(function () {

            $(".check-all").click(function () {
                var target = $(this).attr("target");
                if ($(this).is(":checked")) {
                    $("input[name="+ target +"]").prop("checked", true);
                }
                else {
                    $("input[name="+ target +"]").prop("checked", false);
                }
            });

        }); // --- END OF DOCUMENT READY --- //
    </script>   
}
@model MojKatalog.Models.Klienti

@{
    ViewBag.Title = "DodadiKlient";
}
<input type="hidden" id="activeLink" value="klientLink" />
<h3 class="page-title">Додади Контакт <small>креирање на нов контакт</small></h3>
<ul class="breadcrumb">
    <li class="active"><a href="@Url.Action("Index", "Klient")">Контакти</a></li>
    <li class="active">Додади Контакт</li>
</ul>
<div class="well bs-component">
 @using (Html.BeginForm("DodadiKlient", "Klient", FormMethod.Post, new { @class = "form-horizontal" })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Контакт</legend>

        <div class="form-group">
            @Html.LabelFor(model => model.Ime, new { @class = "col-lg-1 col-md-2 control-label"})
      
        <div class="col-lg-10">
            @Html.EditorFor(model => model.Ime, new { @class = "form-control"})
            @Html.ValidationMessageFor(model => model.Ime)
        </div>
            </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Prezime, new { @class = "col-lg-1 col-md-2 control-label"})
        <div class="col-lg-10">
            @Html.EditorFor(model => model.Prezime, new { @class = "form-control"})
            @Html.ValidationMessageFor(model => model.Prezime)
        </div>
            </div>

         <div class="form-group">
            @Html.LabelFor(model => model.NazivNaFirma, new { @class = "col-lg-1 col-md-2 control-label"})
        <div class="col-lg-10">
            @Html.EditorFor(model => model.NazivNaFirma, new { @class = "form-control"})
            @Html.ValidationMessageFor(model => model.NazivNaFirma)
        </div>
             </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Mail, new { @class = "col-lg-1 col-md-2 control-label"})
        <div class="col-lg-10">
            @Html.EditorFor(model => model.Mail, new { @class = "form-control"})
            @Html.ValidationMessageFor(model => model.Mail)
        </div>
            </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Telefon, new { @class = "col-lg-1 col-md-2 control-label"})
        <div class="col-lg-10">
            @Html.EditorFor(model => model.Telefon, new { @class = "form-control"})
            @Html.ValidationMessageFor(model => model.Telefon)
        </div>
            </div>

        <br />
            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-1 col-md-offset-2">
                    <button type="submit" class="btn btn-primary"> Креирај </button>
                </div>
            </div>
    </fieldset>
}
    </div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap/css/bootstrap-theme-flaty.css" rel="stylesheet" />
    <link href="~/Content/custom.css" rel="stylesheet" />
    @RenderSection("Styles", false)
</head>
<body>
    <div class="navbar navbar-default navigation-bar">
        <div class="container-fluid">
            <div class="navbar-header">
                <a href="../" class="navbar-brand">Bootswatch</a>

            </div>
            <div class="navbar-collapse collapse" id="navbar-main">
                
            </div>
        </div>
    </div>
    <div class="container-fluid table-container">
        <div class="row table-row">

            <div class="col-lg-12 cont-container table-col">
                @RenderBody()
            </div>
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/Layout/LayoutJs.js"></script>
    @RenderSection("KategorijaIndexScripts", false)
    @RenderSection("KatalogIzmeniKatalogScripts", false)
    @RenderSection("KatalogDodadiKatalogScripts", false)
    @RenderSection("Scripts", false)

</body>
</html>

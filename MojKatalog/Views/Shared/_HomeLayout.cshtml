<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap/css/bootstrap-theme-flaty.css" rel="stylesheet" />
    <link href="~/Content/custom.css" rel="stylesheet" />
    @RenderSection("KategorijaIndexStyles", false)
    @RenderSection("Styles", false)
</head>
<body>
    <div class="navbar navbar-default navigation-bar">
        <div class="container-fluid">
            <div class="navbar-header">
                <a href="../" class="navbar-brand">Портфолио</a>

            </div>
            <div class="navbar-collapse collapse" id="navbar-main">
                <ul class="nav navbar-nav navbar-right nav-user">
                    <li class="dropdown">
                        <a href="@Url.Action("Login", "Account")">
                            <span class="glyphicon glyphicon glyphicon-log-in" aria-hidden="true"></span> &nbsp
                            <span class="username">
                                Логирај се
                            </span>
                        </a>
                    </li>
                </ul>

            </div>
        </div>
    </div>
    <div class="container-fluid">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/Layout/LayoutJs.js"></script>
    @RenderSection("KategorijaIndexScripts", false)
    @RenderSection("KatalogIzmeniKatalogScripts", false)
    @RenderSection("KatalogDodadiKatalogScripts", false)
    @RenderSection("Scripts", false)

</body>
</html>